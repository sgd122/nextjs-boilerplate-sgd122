{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/api/*": ["api/*"],
      "@/ui/*": ["ui/*"],
      "@/lib/*": ["lib/*"],
      "@/types/*": ["types/*"],
      "@/states/*": ["states/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"],
      "@/components/*": ["components/*"],
      "@/styles/*": ["styles/*"],
      "@travelmakers-design/core": [
        "../travelmakers-design/packages/travelmakers-design-core"
      ],
      "@travelmakers-design/styles": [
        "../travelmakers-design/packages/travelmakers-design-styles"
      ],
      "@travelmakers-design/hooks": [
        "../travelmakers-design/packages/travelmakers-design-hooks"
      ],
      "@travelmakers-design/utils": [
        "../travelmakers-design/packages/travelmakers-design-utils"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "global.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "types": ["cypress", "cypress-axe", "node"],
  "exclude": ["node_modules"]
}
